/**app.wxss**/
@import 'weui.wxss';
page {
    background: #F6F6F6;
    font-family: 'Microsoft Yahei'
}
.bottom{
  position: fixed;
  bottom: 0px;
  width: 100%;
}
.green{
  background-color: rgb(136, 186, 71);
}
.yellow{
  background-color: rgb(228,188,41);
}
.blue{
  background-color: rgb(29, 178, 23858);
}
.orange{
  background-color: rgb(228, 140, 58);
}
.record-button {
    position: fixed;
    bottom: 40rpx;
    left: 50%;
    margin-left: -70rpx;
    width: 140rpx;
    height: 140rpx;
    background: rgb(136, 186, 71);
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 2px 10px rgba(0, 49, 114, .5);
    transition: all 300ms ease;
    z-index: 1000;
}
