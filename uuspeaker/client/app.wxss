/**app.wxss**/
@import 'weui.wxss';
page {
    background: #F6F6F6;
    font-family: 'Microsoft Yahei'
}
.top{
  position: fixed;
  top:0px;
  width: 100%;
  z-index:999;
  margin:0px 0px 2px 0px; 
  background-color: white;
  
  border-style: solid;
  border-width: 1px;
  border-color: gainsboro;
}
.middle{
  margin-top:45px;
}
.bottom{
  position: fixed;
  bottom: 0px;
  width: 100%;
}
.green{
  background-color: rgb(136, 186, 71);
}
.yellow{
  background-color: rgb(228,188,41);
}
.blue{
  background-color: rgb(29, 178, 23858);
}
.orange{
  background-color: rgb(228, 140, 58);
}
.record-button {
    position: fixed;
    bottom: 40rpx;
    left: 30%;
    width: 300rpx;
    height: 100rpx;
    background: rgb(136, 186, 71);
    border-radius: 5px;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 2px 10px rgba(0, 49, 114, .5);
    transition: all 300ms ease;
    z-index: 1000;
}
