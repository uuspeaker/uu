.pageContent {
  text-align: center;
  margin-top: 60px;
  align-items: center;
}

.audio-pic {
  width: 25px;
  height: 25px;
}

.audio {
  width: 60px;
  height: 60px;
  border-radius: 3px;
  padding-right: 10px;
}

.audio-position {
  position: relative;
  top: 250px;
  left: 40%;
}

.tip {
  font-size: 18px;
  color: #888;
  margin-top: 20px;
  font-weight: bold;
}

.content {
  font-size: 32px;
  color: orange;
  font-weight: bold;
}

.bottom {
  position: fixed;
  bottom: 5px;
  width: 50%;
  margin-left: 23%;
}

.note-btn {
  width: 50rpx;
  height: 130rpx;
  background: rgb(136, 186, 71);
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 2px 10px grey;
  margin-left: 25px;
  opacity: 1;
  z-index: 99999999;
}

.task-pic{
width: 110px; 
height: 110px; 
display: block;
border-radius: 6px;
}

.uu-code{
  width:50px;
  height:50px;
  margin-top: 15px;
}
.guideline {
  width: 80px;
  height: 100px;
  margin: 10px;
  color: white;
  text-align: center;
  vertical-align: middle;
  box-shadow: 1px 1px 3px 1px #888888;
  text-shadow: 1px 1px 1px silver;
}
.recordText{
  font-size: 20px;
  color: white;
  padding-left: 8px;
}
.myRecord{
  color: #576b95;
  font-size: 17px;
  font-weight: bold;
  margin-left: 5px;
  vertical-align: middle;
  
}
.commentArea {
  background-color: gainsboro;
  padding: 8px;
  border-radius: 10px 10px 0px 0px; 
  width: 96%;
  height: 70px;
  align-items: center;
}
.commentInput {
  background-color: white;
  height: 50px;
  width: 80%;
  font-weight: bold;
  text-align: center;
  margin-left: 10%;
  font-size: 24px;

}
.commentArea2 {
  background-color: gainsboro;
  padding: 8px;
  border-radius: 0px 0px 0px 0px; 
  width: 96%;
  height: 420px;
  align-items: center;
  margin-top: 1px;
}

.commentInput2 {
  background-color: white;
  height: 380px;
  width: 98%;
  align-items: center;
  margin-left: 1%;
}
.commentLimit{
  position: fixed;
  right:15px;
  color: white;
}
