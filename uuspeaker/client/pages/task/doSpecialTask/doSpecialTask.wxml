<form bindsubmit=''>
    <view class="weui-flex commentArea">
      <view class="weui-flex__item">
        <input class='commentInput' name="audioName"  placeholder='请输入标题'  bindinput="audioNameInput" ></input>
      </view>
    </view>
  </form>


 <view class="weui-flex commentArea2">
      <view class="weui-flex__item">
        <textarea class=' commentInput2' name="audioText"  placeholder='请输入备注信息'  bindinput="audioTextInput" maxlength='2000'></textarea> 
        
        <view><text class="myRecord" bindtap='toSpecialTaskList'>察看录音</text><text  class="commentLimit">0/2000</text> </view>
      </view>
    </view>

<view class="weui-flex ">

<block wx:if="{{isPlay == 0}}">
  <view class="weui-flex__item record-button" style="{{pressStyle}}" bindtap="startRecord" >
    <image class="audio-pic" src="../../../images/audioDetail/voice.png"></image>
    <text class="weui-flex recordText">点击录音</text>
  </view>
  </block>
  <block wx:if="{{isPlay == 1}}">
  <view class="weui-flex__item record-button" style="{{pressStyle}}" bindtap="stopRecord">

    <image class="audio-pic" style='opacity:{{playNotice}}' src="../../../images/audioDetail/voice.png"></image>

    <text class="weui-flex recordText">完成录音</text>
  </view>
  </block>
</view>