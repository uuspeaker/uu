<!--积分汇总-->
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell">
    <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
      <image class="user-pic" src="{{userInfo.avatarUrl}}" />
    </view>
    <view class="weui-cell__bd">
      <view class='link' bindtap='toUserIntroduction'>{{userInfo.nickName}}</view>
      <view style="font-size: 13px;color: #888888;padding-top:5px">{{rank}}
      </view>
    </view>
    <view class="weui-cell__ft totoalScore">
      {{todayStudyDuration}} 分钟

    </view>
  </view>

  <view class='line'></view>

  <view>
    <view class="weui-flex" style='padding-left:25px;padding-bottom:5px'>
      <view class="weui-flex__item">
        <view class='small-grey'>总共学习</view>
        <view class="weui-flex" style='font-size:15px'>{{totalStudyDurationstr}}</view>
      </view>
     <view class="weui-flex__item" data-type='1' bindtap='toLikeUserList'>
        <view class='small-grey'>我关注的</view>
        <view class="weui-flex" style='font-size:15px' >{{likeUserTotal}} 人</view>
      </view>
      <view class="weui-flex__item" data-type='2' bindtap='toLikeUserList'>
        <view class='small-grey'>我的粉丝</view>
        <view class="weui-flex" style='font-size:15px' >{{myFansTotal}} 人</view>
      </view>
    </view>
  </view>
</view>

<view class="page__bd">
  <view class="weui-cells__title"></view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell" data-task_type='1'>
      自己练 <block wx:if='{{newCommentAmount > 0}}'><text class="commentNotice" catchtap='toNewCommentList'>您有{{newCommentAmount}}条新的回复</text></block>
    </view>
    <view class="weui-cell" data-task_type='1'>
      
      <view bindtap='toDoSpecialTask'>
        <view>
          <image class="task-pic" src="../../../images/studyIndex/plan.png" />
        </view>
        <view class='content'>自由练习</view>
      </view>

      <view bindtap='toSpecialTaskList'>
        <view>
          <image class="task-pic" src="../../../images/studyIndex/plan.png" />
        </view>
        <view class='content'>听录音</view>
      </view>

       <view bindtap='toSpeechNameList'>
        <view>
          <image class="task-pic" src="../../../images/studyIndex/plan.png" />
        </view>
        <view class='content'>我要出题</view>
      </view>
      
    </view>
  </view>
</view>

<view class="page__bd">
  <view class="weui-cells__title"></view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell" data-task_type='1'>
      一起练
    </view>
    <view class="weui-cell" data-task_type='1' >
      
      <view bindtap='openImpromptuRoom'>
        <view>
          <image class="task-pic" src="../../../images/studyIndex/plan.png" />
        </view>
        <view class='content'>创建房间</view>
      </view>

      <view bindtap='toImpromptuIndex'>
        <view>
          <image class="task-pic" src="../../../images/studyIndex/plan.png" />
        </view>
        <view class='content'>预约练习</view>
      </view>
       
    </view>
  </view>
</view>
