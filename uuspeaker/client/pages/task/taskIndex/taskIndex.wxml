<!--积分汇总-->
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell" >
    <view class="weui-cell__hd" style="position: relative;margin-right: 10px;" catchtap='toMyIntroduction'>
      <image class="user-pic" src="{{userInfo.avatarUrl}}" />
    </view>
    <view class="weui-cell__bd" catchtap='toMyIntroduction'>
      <view class='link' >{{userInfo.nickName}}<image class='card-pic' src="../../../images/studyManage/introduction.png" ></image></view>
      <view style="font-size: 13px;color: #888888;padding-top:5px">{{rank}}
      </view>
    </view>
    <view class="weui-cell__ft totoalScore">
      {{totalStudyDuration}} 分 <text style='color:red' wx:if='{{todayStudyDuration !=0}}'>+{{todayStudyDuration}}</text>
    </view> 
  </view>

  <view class='line'></view>

  <view>
    <view class="weui-flex" catchtap='toStudyRank' style='padding-left:25px;padding-bottom:5px' >
      <view class="weui-flex__item" data-type='1' catchtap='toScoreRank'>
        <view class='small-grey'>演讲</view>
        <view class="weui-flex" style='font-size:15px'>{{speechScoreTotal}}<text class='small-grey2'>次</text><text class='small-increase' wx:if='{{speechScoreToday != 0}}'>+{{speechScoreToday}}</text></view>
      </view>
      <view class="weui-flex__item" data-type='1' catchtap='toScoreRank'>
        <view class='small-grey'>复盘</view>
        <view class="weui-flex" style='font-size:15px'>{{reviewScoreTotal}}<text class='small-grey2'>次</text><text class='small-increase' wx:if='{{reviewScoreTotal != 0}}'>+{{reviewScoreToday}}</text></view>
      </view>
      <view class="weui-flex__item" data-type='1' catchtap='toScoreRank'>
        <view class='small-grey'>聆听</view>
        <view class="weui-flex" style='font-size:15px'>{{listenScoreTotal}}<text class='small-grey2'>次</text><text class='small-increase' wx:if='{{listenScoreTotal != 0}}'>+{{listenScoreToday}}</text></view>
      </view>
      <view class="weui-flex__item" data-type='1' catchtap='toScoreRank'>
        <view class='small-grey'>鼓励</view>
        <view class="weui-flex" style='font-size:15px'>{{evaluateScoreTotal}}<text class='small-grey2'>次</text><text class='small-increase' wx:if='{{evaluateScoreTotal != 0}}'>+{{evaluateScoreToday}}</text></view>
      </view>
     
      <view class="weui-flex__item" data-type='2' catchtap='toLikeUserList'>
        <view class='small-grey'>影响</view>
        <view class="weui-flex" style='font-size:15px' >{{myFansTotal}}<text class='small-grey2'>人</text></view>
      </view>
    </view>
  </view>
</view>

<view class="page__bd">
  <view class="weui-cells__title"></view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell content" data-task_type='1'>
      学习区 <block wx:if='{{newCommentAmount > 0}}'><text class="commentNotice" catchtap='toNewCommentList'>{{newCommentAmount}}条消息</text></block>
    </view>
    <view class="weui-cell " data-task_type='1'>
       
      <view class="weui-flex__item studyArea" bindtap='toDoSpecialTask'>
        <view>
          <image class="task-pic" src="../../../images/taskIndex/single.png" />
        </view>
        <view class='content' style='padding-left:3px'>单人练</view>
      </view>

       <view class="weui-flex__item studyArea" bindtap='toQuickMatch'>
        <view>
          <image class="task-pic" src="../../../images/taskIndex/multiple.png" />
        </view>
        <view class='content'>一起练</view>
      </view>

      <view class="weui-flex__item studyArea" bindtap='toSpecialTaskList'>
        <view>
          <image class="task-pic" src="../../../images/taskIndex/voice.png" />
        </view>
        <view class='content'>听演讲</view>
      </view>
      
      
    </view>
  </view>
</view>

<view class="page__bd">
  <view class="weui-cells__title"></view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell content" data-task_type='1'>
      休闲区 
    </view>
    <view class="weui-cell " data-task_type='1'>
       
      <view class="weui-flex__item studyArea" data-type='1' catchtap='toScoreRank'>
        <view>
          <image class="task-pic" src="../../../images/taskIndex/rank.png" />
        </view>
        <view class='content' style='padding-left:3px'>看排名</view>
      </view>

       <view class="weui-flex__item studyArea" bindtap='toSpeechNameList'>
        <view>
          <image class="task-pic" src="../../../images/taskIndex/title.png" />
        </view>
        <view class='content'>出题目</view>
      </view>

      <view class="weui-flex__item studyArea"  bindtap='toEvaluateSpeechName'>
        <view>
          <image class="task-pic"  src="../../../images/taskIndex/star.png" />
        </view>
        <view class='content' >审题目</view>
      </view>

      
      
    </view>
  </view>
</view>
<block wx:if='{{isLogin == 0}}'>
 <button class='bottom' type='primary' open-type="getUserInfo" bindgetuserinfo='initIndex'>登陆</button>
 </block>


