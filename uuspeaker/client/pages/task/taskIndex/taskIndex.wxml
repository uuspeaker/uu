<!--积分汇总-->
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell">
    <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
      <image class="user-pic" src="{{userInfo.avatarUrl}}" />
    </view>
    <view class="weui-cell__bd">
      <view class='link' bindtap='toUserIntroduction'>{{userInfo.nickName}}</view>
      <view style="font-size: 13px;color: #888888;padding-top:5px">
        <text wx:if="{{totalScore == 0}}">Lv1：乞丐演讲君</text>
        <text wx:if="{{totalScore >= 1 && totalScore < 20}}">Lv2：贫民演讲君</text>
        <text wx:if="{{totalScore >= 20 && totalScore < 50}}">Lv3：布衣演讲君</text>
        <text wx:if="{{totalScore >= 50 && totalScore < 100}}">Lv4：青铜演讲君</text>
        <text wx:if="{{totalScore >= 100 && totalScore < 200}}">Lv5：白银演讲君</text>
        <text wx:if="{{totalScore >= 200 && totalScore < 300}}">Lv6：黄金演讲君</text>
        <text wx:if="{{totalScore >= 300 && totalScore < 500}}">Lv7：铂金演讲君</text>
        <text wx:if="{{totalScore >= 500 && totalScore < 700}}">Lv8：钻石演讲君</text>
        <text wx:if="{{totalScore >= 700 && totalScore < 1000}}">Lv9：星耀演讲君</text>
        <text wx:if="{{totalScore >= 1000}}">Lv10：王者演讲君</text>
      </view>
    </view>
    <view class="weui-cell__ft totoalScore">
      {{totalTaskScore}} 分
    </view>
  </view>

  <view class='line'></view>

  <view>
    <view class="weui-flex" style='padding-left:15px;padding-bottom:5px'>
      <view class="weui-flex__item">
        <view class='small-grey'>基础任务</view>
        <view class="weui-flex" style='font-size:15px'>+{{baseScore}} 分</view>
      </view>
      <view class="weui-flex__item">
        <view class='small-grey'>点赞加分</view>
        <view class="weui-flex" style='font-size:15px'>+{{likeScore}} 分</view>
      </view>
      <view class="weui-flex__item">
        <view class='small-grey'>点评加分</view>
        <view class="weui-flex" style='font-size:15px'>+{{commentScore}} 分</view>
      </view>
      
    </view>
  </view>
</view>

<view class="page__bd">
    <view class="weui-cells__title">如何过一天，就如何过一生</view>

<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell" data-task_type='1' bindtap='toDoTask'>
    <view class="user-avatar">
      <image class="user-pic" src="../../../images/studyIndex/plan.png" />
    </view>
    <view class="weui-cell__bd title">
      <view>【今日计划】<text class='small-grey'></text></view>
      <view class="small-grey">
      <image class="like" src="../../../images/studyIndex/view.png" /> {{planData.view_amount}}
      <image class="like" src="../../../images/studyIndex/like.png" /> {{planData.like_amount}}  
      <image class="like" src="../../../images/studyIndex/comment.png" /> {{planData.comment_amount}} 
      </view>
    </view>
    <view class="weui-cell__ft rightItem">
    <block wx:if="{{planData.isComplete == 0}}">
    <text style='color:rgb(228, 140, 58);font-weight:bold'>进行中</text>
      </block>
      <block wx:else>
      <text style='color:grey;font-weight:bold'>已完成</text>
       </block>
    </view>
  </view>

  <view class="weui-cell" data-task_type='2' bindtap='toDoTask'>
    <view class="user-avatar">
      <image class="user-pic" src="../../../images/studyIndex/think.png" />
    </view>
    <view class="weui-cell__bd title">
      <view>【今日复盘】</view>
      <view class="small-grey">
      <image class="like" src="../../../images/studyIndex/view.png" /> {{reviewData.view_amount}}
      <image class="like" src="../../../images/studyIndex/like.png" /> {{reviewData.like_amount}}
      <image class="like" src="../../../images/studyIndex/comment.png" /> {{reviewData.comment_amount}} 
      </view>
    </view>
    <view class="weui-cell__ft rightItem">
    <block wx:if="{{reviewData.isComplete == 0}}">
    <text style='color:rgb(228, 140, 58);font-weight:bold'>进行中</text>
      </block>
      <block wx:else>
      <text style='color:grey;font-weight:bold'>已完成</text>
       </block>
    </view>
  </view>

  <view class="weui-cell" data-task_type='3' bindtap='toDoTask'>
    <view class="user-avatar">
      <image class="user-pic" src="../../../images/studyIndex/like1.png" />
    </view>
    <view class="weui-cell__bd title">
      <view>【每日一赞】<text class='small-grey'></text></view>
      <view class="small-grey">
      <image class="like" src="../../../images/studyIndex/view.png" /> {{likeData.view_amount}}
      <image class="like" src="../../../images/studyIndex/like.png" /> {{likeData.like_amount}}
      <image class="like" src="../../../images/studyIndex/comment.png" /> {{likeData.comment_amount}} 
      </view>
    </view>
    <view class="weui-cell__ft rightItem">
    <block wx:if="{{likeData.isComplete == 0}}">
    <text style='color:rgb(228, 140, 58);font-weight:bold'>进行中</text>
      </block>
      <block wx:else>
      <text style='color:grey;font-weight:bold'>已完成</text>
       </block>
    </view>
  </view>

  <view class="weui-cell" data-task_type='4' bindtap='toDoTask'>
    <view class="user-avatar">
      <image class="user-pic" src="../../../images/studyIndex/study.png" />
    </view>
    <view class="weui-cell__bd title">
      <view>【每日一讲】</view>
      <view class="small-grey">
      <image class="like" src="../../../images/studyIndex/view.png" /> {{speechData.view_amount}}
      <image class="like" src="../../../images/studyIndex/like.png" /> {{speechData.like_amount}}
      <image class="like" src="../../../images/studyIndex/comment.png" /> {{speechData.comment_amount}} 
      </view>
    </view>
    <view class="weui-cell__ft rightItem">
    <block wx:if="{{speechData.isComplete == 0}}">
    <text style='color:rgb(228, 140, 58);font-weight:bold'>进行中</text>
      </block>
      <block wx:else>
      <text style='color:grey;font-weight:bold'>已完成</text>
       </block>
    </view>
  </view>

  <view class="weui-cell" data-task_type='5' bindtap='toDoTask'>
    <view class="user-avatar">
      <image class="user-pic" src="../../../images/studyIndex/comment2.png" />
    </view>
    <view class="weui-cell__bd title">
      <view>【每日一评】</view>
      <view class="small-grey">
      <image class="like" src="../../../images/studyIndex/view.png" /> {{evaluateData.view_amount}}
      <image class="like" src="../../../images/studyIndex/like.png" /> {{evaluateData.like_amount}}
      <image class="like" src="../../../images/studyIndex/comment.png" /> {{evaluateData.comment_amount}} 
      </view>
    </view>
    <view class="weui-cell__ft rightItem">
    <block wx:if="{{evaluateData.isComplete == 0}}">
    <text style='color:rgb(228, 140, 58);font-weight:bold'>进行中</text>
      </block>
      <block wx:else>
      <text style='color:grey;font-weight:bold'>已完成</text>
       </block>
    </view>
  </view>
 
</view>
</view>
