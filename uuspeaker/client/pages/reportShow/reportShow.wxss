.tooltip {
    position: relative;
    display: inline-block;
}

.tooltip .tooltiptext {
    visibility: hidden;
    width: 150px;
    height: 20px;
    background-color: grey;
    color: #fff;
    text-align: center;
    border-radius: 6px;
    padding: 5px 0;
    
    /* 定位 */
    position: absolute;
    z-index: 1;
    top: -5px;
    right: 105%;
    font-size: 13px;
}

.tooltip:hover .tooltiptext {
    visibility: visible;
}

.commentShow{
  background-color: gainsboro;
  padding: 5px;
  font-size: 13px;
}