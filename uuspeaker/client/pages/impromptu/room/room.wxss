.top{
  position: fixed;
  top:0px;
  width: 100%;
  z-index:999;
  margin:0px 0px 2px 0px; 
  background-color: white;
  box-shadow: 0px 0px 5px 1px gainsboro;
  border-style: solid;
  border-width: 1px;
  border-color: gainsboro;
}

.speak1{
  padding-top: 0px;
  border: 2px; 
  background-color: greenyellow; 
}
.silence1{
  padding-top: 0px;
  border: 2px; 
  background-color: gainsboro; 
}
.speak{
  box-shadow: 0px 0px 2px 3px rgb(136, 186, 71);
}
.silence{
  box-shadow: 0px 0px 0px 0px ;
}
.speechArea{
  margin: 10px 5px 5px 5px;
}

.itemClass{
  margin-left: 5px; 
  margin-right: 8px; 
}
.my-pic {
  width: 50px;
  height: 50px;
  border-radius: 6px;
  margin-right: 10px;
}
.user-pic {
  width: 45px;
  height: 45px;
  border-radius: 35px;
}

.user-pic-speak {
  opacity:1;
}

.user-pic-silent {
  opacity:0.3;
}

.userName {
  font-size: 13px;
  text-align:center;
  width:45px; 
  overflow:hidden;  
  text-overflow:ellipsis; 
  white-space:nowrap;
}

live-player {
  width: 100%;
  height: 100%;
}

.character {
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 16px;
  color: #999;
  width: 100%;
  height: 10vw;
  line-height: 10vw;
  text-align: left;
}

.loading {
  position: absolute;
  width: 100%;
  height: 100%;
}

.loading cover-image {
  position: absolute;
  top: calc(50% - 15px);
  left: calc(50% - 15px);
  width: 30px;
  height: 30px;
}

.dialog-pic {
  width: 40px;
  height: 40px;
}



.userDialog {
  background-color: white;
  border-radius: 6px;
  margin-left: 10px;
  margin-right: 10px;
}

.myDialog {
  background-color: #9EE75A;
  border-radius: 6px;
  margin-left: 10px;
  margin-right: 10px;
  padding-right: 8px;
 
}

.tip {
  position: relative;
  height:auto;
  width: auto;
  padding: 8px 12px 8px 12px;
}

.tip:after {
  content: '';
  position: absolute;

  border: 5px solid;
  color: transparent;
}

.right:after {
  border-left-color: #9EE75A;
  left: 100%;
  top: 20px;
  margin-top: -7px;
}

.left:after {
  border-right-color: white;
  top: 20px;
  right: 100%;
  margin-top: -7px;
}

.dialogArea {
  padding: 8px;
  white-space: pre-wrap;
  word-wrap: break-word;
  word-break: break-all;
}
.mic-pic {
  width: 40px;
  height: 40px;
  padding-right: 15px;
}
.commentArea {
  background-color: gainsboro;
  margin-top: 15px;
  padding: 8px;
  border-radius: 10px 10px 0px 0px; 
  position: fixed;
  bottom: 0px;
  width: 96%
}

.commentInput {
  border-radius: 5px;
  background-color: white;
  height: 40px;
  width: 250px;
}

.commentBotton{
  margin-left: 5px;
  margin-right: 10px;
  width: 50px;
}

.button{
  font-size: 15px;
}





