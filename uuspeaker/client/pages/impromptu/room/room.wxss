.top{
  position: fixed;
  top:0px;
  width: 100%;
  z-index:999;
  background-color: white;
}
.img-box {
  position: relative;
  display: inline-block;
  height: calc(100vh - 134.66vw);
  width: 25vw;
  vertical-align: middle;
}

.speechArea{
  margin: 10px 15px 5px 15px;
}

.user-pic {
  width: 50px;
  height: 50px;
  border-radius: 3px;
}

.userName {
  font-size: 13px;
  text-align:center;
}

.player-box {
  position: relative;
  display: inline-block;
  overflow: hidden;
  width: 20vw;
  height: 40vw;
  text-align: center;
  margin-bottom: 2vw;
  vertical-align: top;
}

.player-box:nth-child(2), .player-box:nth-child(4) {
  margin-left: 2vw;
}

live-player {
  width: 100%;
  height: 100%;
}

.character {
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 16px;
  color: #999;
  width: 100%;
  height: 10vw;
  line-height: 10vw;
  text-align: left;
}

.loading {
  position: absolute;
  width: 100%;
  height: 100%;
}

.loading cover-image {
  position: absolute;
  top: calc(50% - 15px);
  left: calc(50% - 15px);
  width: 30px;
  height: 30px;
}

.dialog-pic {
  width: 45px;
  height: 45px;
}



.userDialog {
  background-color: white;
  border-radius: 6px;
  margin-left: 10px;
  margin-right: 10px;
}

.myDialog {
  background-color: #9EE75A;
  border-radius: 6px;
  margin-left: 10px;
  margin-right: 10px;
  padding-right: 8px;
 
}

.tip {
  position: relative;
  height:auto;
  width: auto;
  padding: 8px 12px 8px 12px;
}

.tip:after {
  content: '';
  position: absolute;

  border: 5px solid;
  color: transparent;
}

.right:after {
  border-left-color: #9EE75A;
  left: 100%;
  top: 20px;
  margin-top: -7px;
}

.left:after {
  border-right-color: white;
  top: 20px;
  right: 100%;
  margin-top: -7px;
}

.dialogArea {
  padding: 8px;
  white-space: pre-wrap;
  word-wrap: break-word;
  word-break: break-all;
}

.commentArea {
  background-color: gainsboro;
  margin-top: 15px;
  padding: 8px;
}

.commentInput {
  border-radius: 5px;
  background-color: white;
  height: 60px;
}

.commentBotton{
  margin-left: 5px;
  margin-right: 5px;

}
