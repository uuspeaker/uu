
.img-box {
  position: relative;
  display:inline-block;
  height: calc(100vh - 134.66vw);
  width: 25vw;
  vertical-align: middle;
}
.user-pic{
width: 50px; 
height: 50px; 
border-radius: 3px;
margin: 3px;
}
.img-box image {
  position: absolute;
  max-width: calc(100vh - 138vw);
  max-height: calc(100vh - 138vw);
  width: 8vh;
  height: 8vh;
  top: calc(50vh - 75.33vw); 
  left: calc(12.5vw - 4vh);
}
.operate {
  position: fixed;
  /* bottom: 3vh; */
}
.userName{
  font-size: 13px;
  text-align: center;
}
.player-box {
	position: relative; 
	display: inline-block; 
	overflow: hidden;
	width: 20vw;
	height: 40vw; 
	text-align: center;
  margin-bottom: 2vw;
  vertical-align: top;
}
.player-box:nth-child(2),.player-box:nth-child(4) {
   margin-left: 2vw; 
} 

live-player {
  width: 100%;
	height: 100%; 
}
.character {
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 16px;
  color: #999;
  width: 100%;
  height: 10vw;
  line-height: 10vw;
  text-align: left;
}
.loading {
  position: absolute;
  width: 100%;  
  height: 100%; 
}
.loading cover-image {
  position: absolute;
  top: calc(50% - 15px);
  left: calc(50% - 15px);
  width: 30px;
  height: 30px;
}
