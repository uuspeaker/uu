
.host-pic {
  width: 120rpx;
  height: 120rpx;
  border-radius:100rpx;
  margin-right: 20rpx;
}
.picMoveRight
{
	position:relative;
	animation:myPicMoveRight 2s;
	-webkit-animation:myPicMoveRight 2s; /* Safari and Chrome */
}
@keyframes myPicMoveRight
{
	0%  {left:300rpx;}
	100% {left:0rpx}
}
.picMoveLeft
{
	position:relative;
	animation:myPicMoveLeft 2s;
	-webkit-animation:myPicMoveLeft 2s; /* Safari and Chrome */
}
@keyframes myPicMoveLeft
{
	0%  {right:300rpx; }
	100% {right:0rpx}
}
.host-pic2 {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100rpx;
