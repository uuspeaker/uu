}
.pic-center{
  text-align: center;
  align-content: center;
  align-items: center;
  align-self: center;
}
.vs{
  font-size:80rpx;
  font-family: Arial, Helvetica, sans-serif;
  padding-bottom:30rpx;
  animation:vsChange 1.5s;
	-webkit-animation:vsChange 1.5s; 
}
@keyframes vsChange
{
	0%  {font-size:0rpx;}
	100% {font-size:80rpx;}
}
.speechName{
  height:60rpx;
  font-size:40rpx;
  text-align: center;
  margin-top:40rpx;
  margin-bottom: 30rpx;
  font-weight: bold;
  animation:speechNameChange 4s;
	-webkit-animation:speechNameChange 4s; 
}
@keyframes speechNameChange
{
	0%  {font-size:0rpx;}
	30%  {font-size:0rpx;}
	100% {font-size:40rpx;}
}
.twinkle{
	animation:myfirst 5s;
	-webkit-animation:myfirst 5s; /* Safari and Chrome */
}

@keyframes myfirst
{
	from {color:red;}
	to {color:black;}
}


