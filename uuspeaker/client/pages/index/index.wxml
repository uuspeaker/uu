<!--index.wxml-->
<view class="container">
    <!-- 用户登录测试 -->
    <view class="userinfo" bindtap="login">
        <image
            class="userinfo-avatar"
            src="{{logged ? userInfo.avatarUrl : './user-unlogin.png'}}"
            background-size="cover"
        ></image>
        <view>
            <text class="userinfo-nickname">{{logged ? userInfo.nickName : 'Login'}}</text>
            <text class="userinfo-nickname" wx:if="{{logged}}">{{userInfo.lastLoginTime}}</text>
        </view>
    </view>
    <view wx:if="{{logged}}">
      <button class='userinfo-button' bindtap="applySpeaker">我要演讲</button>
    </view>

    <block wx:if="{{logged}}">
  
</block>

    

    <!-- 上传图片测试 -->
    <view class="uploader">
        <navigator url="../addCgi/addCgi" open-type="navigate" class="uploader-text">
            <text>快速增加 CGI</text>
        </navigator>
    </view>


    <view class="uploader">
        <navigator url="../meeting/meeting" open-type="navigate" class="uploader-text">
            <text>meeting</text>
        </navigator>
    </view>

    <view>{{meetingApplyInfo}}</view>
    
</view>
