.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    -webkit-text-size-adjust:none;
    -webkit-user-select: none;
    font-size: 35rpx;
    color: #333;
    font-family: Helvetica,Arial,"Helvetica Neue","Droid Sans","Microsoft YaHei",sans-serif;
}
.canvas {
    width: 100%;
    height: 400rpx;
    margin-top:0rpx;
}
.title {
	text-align: center;
	position: relative;
	margin-top: 20rpx;
	margin-bottom: 20rpx;
}
.back-btn {
	position: absolute;
	left: 20rpx;
	top: 0;
}
.studyNotice{
  text-align: center;
  font-size: 40rpx;
  margin-top: 20rpx;
  font-weight: bold;
  margin-bottom: 0rpx;
}
.studyNotice2{
  text-align: center;
  font-size: 34rpx;
  margin-top: 10rpx;
}
.studyNotice3{
  text-align: center;
  font-size: 26rpx;
  margin-top: 0rpx;
  color: gray;
}
.star-pic{
  width:80rpx;
  height: 80rpx;
 margin: 12rpx;
 margin-top: 20rpx;
}
.starContent{
  text-align: center;
}
.studyTip{
  text-align: center;
  font-size: 22rpx;
  margin-top: 20rpx;
  color: grey;
}
.content {
  width: 80%;
  font-weight: bold;
  padding: 20rpx;
  font-size: 30rpx;
  background-color: white;
  border-radius:20rpx;
  opacity:0.8;
  margin-top: 40rpx;
  height: 160rpx;
  margin-left:60rpx;
  padding-left:30rpx;
}
.uu-code {
  width: 150rpx;
  height: 150rpx;
}
.code-notice{
  background-color:grey;
  border-radius: 40rpx;
  font-size: 24rpx;
  padding-left: 20rpx;
  margin-top: 10rpx;
  width: 220rpx;
  color: white;
}
.arrow-right {  
    font-size: 0;  
    border-left-style: solid;  
    border-top: 14rpx solid transparent;
    border-right: 14rpx solid transparent;
    border-bottom: 14rpx solid transparent; 
    border-left: 14rpx solid white; 
    margin: 6rpx;
} 
