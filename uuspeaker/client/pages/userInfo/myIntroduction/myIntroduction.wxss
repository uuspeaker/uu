.pageContent{
  text-align: center;
  margin-top:50px;
  align-items: center; 
}
.audio-pic{
  width: 35px;
  height: 35px;
  
}
.audio {
  width: 60px;
  height: 60px;
  border-radius: 3px;
  padding-right: 10px;
}
.audio-position{
  position: relative;
  top:250px;
  left: 40%;
}
.tip{
  font-size: 18px;
  color:#888888;
  margin-top: 20px; 
  font-weight: bold;
}
.content{
  font-size:28px;
  color:orange;
  font-weight: bold;
  
}

.bottom{
  position: fixed;
  bottom: 15px;
  width:50%;
  margin-left: 23% 
}
.note-btn {
    width: 50rpx;
    height: 130rpx;
    background: rgb(136, 186, 71);
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 2px 10px grey;
    margin-left: 25px;
    opacity:1;
}
.commentArea {
  background-color: gainsboro;
  padding: 8px;
  border-radius: 10px 10px 10px 10px; 
  width: 96%;
  height: 70px;
  align-items: center;
  
}
.commentInput {
  background-color: white;
  height: 50px;
  width: 90%;
  font-weight: bold;
  text-align: center;
  margin-left: 5%;
  font-size: 30px;

}