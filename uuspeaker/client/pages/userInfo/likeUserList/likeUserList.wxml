
<view class="weui-cell write top">
  <view class=" myReport" style="{{viewStyle[0]}}" data-item='0' data-type='1' bindtap='queryLikeUserInfo'>我关注的</view>
  <view class=" myReport" style="{{viewStyle[1]}}" data-item='1' data-type='2' bindtap='queryLikeUserInfo'>我的粉丝</view>
</view>
<template name="scoreDetailTemplate">
  <view class="weui-cell" bindtap='toAudioDetail' data-audio_id='{{audio_id}}'>
    <view class="user-avatar">
      <image class="user-pic" src="{{user_info.avatarUrl}}" data-user_id='{{user_info.userId}}' data-avatar_url='{{user_info.avatarUrl}}' data-nick_name='{{user_info.nickName}}' catchtap='toUserInfo'/>
    </view>
    <view class="weui-cell__bd">
      <view class="title">
        <view style='padding-left:10px;'>
          <text>{{user_info.nickName}}</text>
          <text class='right'></text>
        </view>
      </view>
      <view class="small-grey" >
      <text>关注时间：{{createDateStr}} </text>
      </view>

    </view>
  </view>
</template>


<view class="weui-cells weui-cells_after-title middle" >
  <block wx:for="{{likeUsers}}" wx:key="item">
    <template is="scoreDetailTemplate" data="{{...item}}" />
  </block>
</view>