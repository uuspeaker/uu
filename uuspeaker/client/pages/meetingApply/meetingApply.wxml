<view class="container">
{{totalScore}}
  <!-- 用户头衔 -->
  <view class="userinfo-top" bindtap="login">
    <image class="userinfo-avatar-top" src="{{logged ? userInfo.avatarUrl : './../index/user-unlogin.png'}}" background-size="cover"></image>
    <view>
      <text>{{logged ? userInfo.nickName + '  【布衣演讲君】': 'LOGIN'}}</text>
      <view class="userinfo-score">
        <text>{{totalScore}}</text>
        <text>{{rank}}</text>
        <text>{{detailScore}}</text>
      </view>
      <text class="userinfo-nickname" wx:if="{{logged}}">{{userInfo.lastLoginTime}}</text>
    </view>
  </view>

  <!--报名参会-->
  <form bindsubmit="applySpeaker" bindreset="formReset">

  <view class="section">
    <view class="section__title">姓名：</view>
    <input name="user_id" placeholder="please input here" />
  </view>
  <view class="section section_gap">
    <view class="section__title">报名时间：</view>
    <radio-group name="meeting_time">
      <label><radio value="20"/>20:00开始</label>
      <label><radio value="21"/>21:00开始</label>
    </radio-group>
  </view>
  <view class="section section_gap">
    <view class="section__title">报名类型：</view>
    <radio-group name="meeting_time">
      <label><radio value="1"/>演讲</label>
      <label><radio value="2"/>主持</label>
    </radio-group>
  </view>
  <view class="btn-area">
    <button class='userinfo-button' formType="submit">报名</button>
  </view>
</form>

</view>